<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">



<mapper namespace="itd.secondhandmall.dao.UserMapper">

    <sql id="Base_Column_List" >
        id,account,password,username,sex,age,email,idcard,address,image
    </sql>



    <!-- 按账户查找用户 -->
    <select id="selectUserByAccount" resultType="itd.secondhandmall.pojo.User">
        select
        <include refid="Base_Column_List"/>
        from
        user
        where
        account = #{account}
    </select>

    <select id="selectUserByUserName" resultType="itd.secondhandmall.pojo.User">
        select
        <include refid="Base_Column_List"/>
        from
        user
        where
        username = #{username}
    </select>

    <!-- 根据账号选择更新 -->
    <update id="updateByPrimaryKeySelective" parameterType="itd.secondhandmall.pojo.User">
        update user
        <set>
            <if test="username != null">
                username = #{username,jdbcType=VARCHAR},
            </if>
            <if test=" password != null">
                password = #{password,jdbcType=VARCHAR},
            </if>
            <if test="sex != null">
                sex = #{sex,jdbcType=VARCHAR},
            </if>
            <if test="age != null">
                age = #{age,jdbcType=TINYINT},
            </if>
            <if test="email != null">
                email = #{email,jdbcType=VARCHAR},
            </if>
            <if test="idcard != null">
                idcard = #{idcard,jdbcType=VARCHAR},
            </if>
            <if test="address != null">
                address = #{address,jdbcType=VARCHAR},
            </if>
            <if test="account != null">
                account = #{account,jdbcType=VARCHAR},
            </if>
            <if test="image != null">
                image = #{image,jdbcType=VARCHAR},
            </if>
        </set>
        where id = #{id,jdbcType=TINYINT}
    </update>

</mapper>