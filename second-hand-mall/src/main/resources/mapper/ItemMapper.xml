<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">



<mapper namespace="itd.secondhandmall.dao.ItemMapper">

    <sql id="Base_Column_List" >
        tid,id,itemname,stime,price,brief,attributes,image,isbuy,isgrounding
    </sql>

    <select id="getAllItemsByAttributes" resultType="itd.secondhandmall.pojo.Item">
        select
        <include refid="Base_Column_List"/>
        from
        item
        where
        attributes = #{attributes} and isgrounding=1 and isbuy=0
    </select>

    <select id="selectItemByName" resultType="itd.secondhandmall.pojo.Item">
        select
        <include refid="Base_Column_List"/>
        from
        item
        where
        itemname like CONCAT('%',#{itemname},'%') and attributes = #{attributes} and isgrounding=1 and isbuy=0
    </select>


    <update id="updateByPrimaryKeySelective" parameterType="itd.secondhandmall.pojo.Item">
        update item
        <set>
            <if test="itemname != null">
                itemname = #{itemname,jdbcType=VARCHAR},
            </if>
            <if test="price != null">
                price = #{price,jdbcType=DOUBLE},
            </if>
            <if test="brief != null">
                brief = #{brief,jdbcType=VARCHAR},
            </if>
            <if test="attributes != null">
                attributes = #{attributes,jdbcType=VARCHAR},
            </if>
            <if test="image != null">
                image = #{image,jdbcType=VARCHAR},
            </if>
            <if test="isbuy != null">
                isbuy = #{isbuy,jdbcType=TINYINT},
            </if>
            <if test="isgrounding != null">
                isgrounding = #{isgrounding,jdbcType=TINYINT},
            </if>
        </set>
        where tid = #{tid,jdbcType=TINYINT}
    </update>
</mapper>